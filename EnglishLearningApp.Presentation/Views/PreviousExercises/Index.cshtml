@model List<EnglishLearningApp.Application.DTOs.SavedExerciseDto>

@{
    ViewData["Title"] = "Previous Exercises";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="bi bi-clock-history"></i> Previous Exercises
            </h2>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Message"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="row mb-3">
                <div class="col">
                    <a asp-action="Index" class="btn btn-primary">All Exercises</a>
                    <a asp-action="Completed" class="btn btn-success">Completed</a>
                    <a asp-action="InProgress" class="btn btn-warning">In Progress</a>
                </div>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No previous exercises found.
                    <a asp-controller="Lessons" asp-action="Index">Start practicing!</a>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var exercise in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h5 class="card-title mb-0">@exercise.Title</h5>
                                    @if (exercise.IsCompleted)
                                    {
                                        <span class="badge bg-success">Completed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">In Progress</span>
                                    }
                                </div>
                                <div class="card-body">
                                    <p class="card-text">@exercise.Description</p>
                                    <div class="row">
                                        <div class="col-6">
                                            <small class="text-muted">
                                                <i class="bi bi-tag"></i> @exercise.Theme
                                            </small>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">
                                                <i class="bi bi-star"></i> Difficulty: @exercise.Difficulty
                                            </small>
                                        </div>
                                    </div>
                                    @if (exercise.IsCompleted && exercise.Score.HasValue)
                                    {
                                        <div class="mt-2">
                                            <div class="progress">
                                                @{
                                                    var percentageText = exercise.Percentage.HasValue ? (exercise.Percentage.Value *
                                                    100).ToString("F0") : "0";
                                                }
                                                <div class="progress-bar @(exercise.Percentage >= 80 ? "bg-success" : exercise.Percentage >= 60 ? "bg-warning" : "bg-danger")"
                                                    style="width: @(exercise.Percentage * 100)%">
                                                    @exercise.Score/@exercise.TotalQuestions (@percentageText%)
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    <div class="mt-3">
                                        <small class="text-muted">
                                            <i class="bi bi-calendar"></i> @exercise.CreatedAt.ToString("MMM dd, yyyy")
                                        </small>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="d-flex justify-content-between">
                                        <a asp-action="Details" asp-route-id="@exercise.Id" class="btn btn-primary btn-sm">
                                            <i class="bi bi-eye"></i> View Details
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@exercise.Id" method="post"
                                            onsubmit="return confirm('Are you sure you want to delete this exercise?');"
                                            style="display: inline;">
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>